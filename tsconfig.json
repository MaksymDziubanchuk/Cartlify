{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                                          
    "outDir": "dist",                        
    "strict": true,                          
    "esModuleInterop": true,                 
    "moduleResolution": "node",              
    "resolveJsonModule": true,               
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]                
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}