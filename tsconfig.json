{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": "src",
    "paths": {
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*": ["config/*"],
      "@graphql/*": ["graphql/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
